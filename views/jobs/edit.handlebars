

<h2>Edit</h2>
<div class="card card-body">
    <h3>Edit My Job</h3>
    <form action="/jobs/{{job._id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{job.title}}" required>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" name="details" required>{{job.details}}</textarea>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <textarea class="form-control" name="location" required>{{job.location}}</textarea>
        </div>
        <div class="form-group">
            <label for="starttime">Start At</label>
            <input class="form-control" style="border: lightgrey solid 1px; border-radius: 5px;" id="datepicker" width="276" name="startdate" required value="{{job.startdate}}">
        </div>
        <div class="input-group clockpicker" style="width:200px">
            <input type="text" name="starttime" class="form-control" required value="{{job.starttime}}">
            <span class="input-group-addon form-control" style="background-color:lightgrey">
                <span class="far fa-clock fa-2x"></span>
            </span>
        </div>
        <div class="form-group" style="width:276px">
            <label for="duration">Duration(hours)</label>
            <select name="duration" class="form-control" id="duration" required>
                <option selected>{{job.duration}}</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>Discuss with Photographer</option>
            </select>
        </div>
        <button type="submit" class="btn btn-light border-dark">Submit</button>
        <button class="btn btn-light border-dark"> <a href="/jobs" style=" text-decoration: None">Go Back</a></button>
    </form>
</div>